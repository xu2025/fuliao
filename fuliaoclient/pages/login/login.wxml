<!--pages/login/login.wxml-->
<view>
  <image src="/assets/photos/denglu.png" class="denglu"/>
  
  <view class="loginPanel">
    <form bindsubmit="_handlerSubmit">

      <view class="formItems">
      <text class="iconfont icon-Account"></text>
      <input name="accountV" class="accountInput" placeholder="请输入账号" bindinput="_handlerInputAccount"></input>
      <icon type="{{right ? 'success':'warn'}}"></icon>
      </view>

      <view class="formItems">
      <text class="iconfont icon-password"></text>
      <input name="passwordV" class="passwordInput" password placeholder="请输入密码" bindinput="_handlerInputPwd"></input>
      </view>

      <!-- <view class="checkboxItems formItems">
        <checkbox-group name="rememberPwdV" bindchange="_handlerRememberPwd">
          <checkbox color="#1296db" checked="{{rememberPwd}}">记住密码</checkbox>
        </checkbox-group>
        <checkbox-group name="autoLoginV" bindchange="_handlerAutoLogin">
          <checkbox color="#1296db" checked="{{autoLogin}}">自动登录</checkbox>
        </checkbox-group>
      </view> -->

      <view>
      <button class="loginBtn" form-type="submit">注册</button>
      <button type="primary" class="loginBtn" form-type="submit" disabled="{{!canLogin}}">登录</button>
      </view>
      
    </form>
  </view>
</view>